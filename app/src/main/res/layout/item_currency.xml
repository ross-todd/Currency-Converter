<?xml version="1.0" encoding="utf-8"?>
<!-- Row container for a currency rate item -->
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:id="@+id/rateRowContainer"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:baselineAligned="false"
    android:orientation="horizontal"
    android:paddingStart="8dp"
    android:paddingEnd="8dp"
    android:paddingTop="10dp"
    android:paddingBottom="10dp"
    android:gravity="center_vertical">

    <!-- Flag image container -->
    <FrameLayout
        android:layout_width="48dp"
        android:layout_height="32dp"
        android:background="@color/medium_gray_background"
        android:layout_marginEnd="10dp">

        <!-- Country flag image -->
        <ImageView
            android:id="@+id/img_flag"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:contentDescription="@string/flag_description"
            android:scaleType="centerCrop"/>
    </FrameLayout>

    <!-- Title and rate container -->
    <LinearLayout
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:layout_weight="1"
        android:orientation="vertical">

        <!-- Currency name/title -->
        <TextView
            android:id="@+id/titleTextView"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:textSize="15sp"
            android:textStyle="bold"
            android:textColor="?android:textColorPrimary" />

        <!-- Rate label and value row -->
        <LinearLayout
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginTop="1dp"
            android:orientation="horizontal">

            <!-- label for rate -->
            <TextView
                android:id="@+id/staticRateLabel"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="@string/base_currency_label"
                android:textSize="16sp"
                android:textStyle="bold"
                android:textColor="?android:textColorSecondary" />

            <!-- Actual rate value -->
            <TextView
                android:id="@+id/rateValueTextView"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:textSize="16sp"
                android:textStyle="bold"
                android:textColor="?android:textColorPrimary" />
        </LinearLayout>
    </LinearLayout>

    <!-- Strength indicator button -->
    <Button
        android:id="@+id/strengthButton"
        android:layout_width="80dp"
        android:layout_height="50dp"
        android:text=""
        android:textSize="12sp"
        android:textStyle="bold"
        android:paddingStart="4dp"
        android:paddingEnd="4dp"
        android:paddingTop="2dp"
        android:paddingBottom="2dp"
        android:layout_marginStart="12dp"
        android:textColor="@android:color/white"
        android:backgroundTint="@color/medium_gray_background"
        android:contentDescription="@string/strength_button_description"
        android:gravity="center"
        android:singleLine="true"
        android:textAllCaps="false" />
</LinearLayout>
