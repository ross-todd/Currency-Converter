<?xml version="1.0" encoding="utf-8"?>
<LinearLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    android:fitsSystemWindows="true"
    tools:context=".HomeFragment">

    <!-- Inner content container -->
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:orientation="vertical"
        android:paddingStart="0dp"
        android:paddingEnd="0dp"
        android:paddingBottom="16dp"
        tools:ignore="ExtraText">

        <!-- Last update time -->
        <TextView
            android:id="@+id/updateTimeTextView"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text=""
            android:textStyle="italic"
            android:layout_marginStart="8dp"
            android:layout_marginEnd="8dp"
            android:layout_marginTop="16dp"
            android:layout_marginBottom="16dp" />

        <!-- Currency search label -->
        <TextView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="@string/currency_search_label"
            android:textSize="20sp"
            android:textStyle="bold"
            android:textColor="@color/black"
            android:layout_marginStart="16dp"
            android:layout_marginEnd="8dp"
            android:layout_marginBottom="8dp" />

        <!-- Currency search fragment container -->
        <androidx.fragment.app.FragmentContainerView
            android:id="@+id/container_search"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginStart="16dp"
            android:layout_marginEnd="8dp"
            android:layout_marginBottom="16dp"
            tools:ignore="UnknownId,MissingClass"
            android:name="org.me.gcu.CurrencyConverter.SearchFragment" />

        <!-- Main currency exchange rates label -->
        <TextView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="@string/main_currency_exchange_rates_label"
            android:textSize="20sp"
            android:textStyle="bold"
            android:textColor="@color/black"
            android:layout_marginStart="16dp"
            android:layout_marginEnd="8dp"
            android:layout_marginTop="12dp" />

        <!-- Main currency exchange fragment container -->
        <androidx.fragment.app.FragmentContainerView
            android:id="@+id/container_main_curr"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginStart="8dp"
            android:layout_marginEnd="8dp"
            android:layout_marginBottom="16dp"
            tools:ignore="UnknownId,MissingClass"
            android:name="org.me.gcu.CurrencyConverter.MainCurrFragment" />

        <!-- All currency exchange rates label -->
        <TextView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="@string/all_currency_exchange_rates_label"
            android:textSize="20sp"
            android:textStyle="bold"
            android:textColor="@color/black"
            android:layout_marginStart="16dp"
            android:layout_marginEnd="8dp"
            android:layout_marginTop="12dp"
            android:layout_marginBottom="8dp" />

        <!-- All currency exchange fragment container -->
        <androidx.fragment.app.FragmentContainerView
            android:id="@+id/container_all_curr"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginStart="8dp"
            android:layout_marginEnd="8dp"
            android:layout_marginBottom="16dp"
            tools:ignore="UnknownId,MissingClass"
            android:name="org.me.gcu.CurrencyConverter.AllCurrFragment" />

    </LinearLayout>
</LinearLayout>
